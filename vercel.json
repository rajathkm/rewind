{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "crons": [
    {
      "path": "/api/sync?trigger=true&secret=${CRON_SECRET}",
      "schedule": "*/30 * * * *"
    },
    {
      "path": "/api/summarize?trigger=true&secret=${CRON_SECRET}&limit=50",
      "schedule": "15,45 * * * *"
    }
  ],
  "functions": {
    "src/app/api/sync/route.ts": {
      "maxDuration": 120
    },
    "src/app/api/sync/[sourceId]/route.ts": {
      "maxDuration": 60
    },
    "src/app/api/summarize/route.ts": {
      "maxDuration": 300
    },
    "src/app/api/content/[id]/summary/route.ts": {
      "maxDuration": 60
    }
  }
}
